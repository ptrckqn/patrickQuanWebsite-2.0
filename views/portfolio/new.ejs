<% include ../partials/header %>

<div class="container">
  <h2 class="pageTitle">Portfolio Management</h2>
</div>
<div class="container contactFormContainer">
  <p>Update your portfolios</p>
  <p>
    <form enctype="multipart/form-data" class="contactForm" action="/portfolio" method="post">
      <input type="text" name="portfolioName" placeholder="Portfolio Name" required>
      <input type="file" name="uploadedImage" accept="image/jpeg" required>
      <br>
      <select name="location" required>
        <option value="" selected disabled hidden>Image Location</option>
        <option value="1">Top Left (P)</option>
        <option value="2">Top Middle (L)</option>
        <option value="3">Top Right (P)</option>
        <option value="4">Bottom Left (L)</option>
        <option value="5">Bottom Middle (P)</option>
        <option value="6">Bottom Right (L)</option>
      </select>
      <div >
        <button type="submit" class="sendButton">UPLOAD</button>
      </div>
    </form>
  </p>
</div>

<% include ../partials/footer %>
